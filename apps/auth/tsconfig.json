{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",

    /* Type Checking */
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    
    /* Module Resolution Options */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
